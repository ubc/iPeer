{
  "extends": "@vue/tsconfig/tsconfig.node.json",
  "include": ["vite.config.*"],
  "compilerOptions": {
    "composite": true,
    "types": ["node"],
    "strict": true,
    "module": "es2022", // "commonjs",
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": [
      "es5",
      "dom"
    ],
    "rootDir": "src",
    "moduleResolution": "node"
  }
}
